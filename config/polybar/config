menu-0-1-exec = thunar &
menu-0-2 = Terminal
menu-0-2-exec = kitty &
menu-0-3 = Browser
menu-0-3-exec = brave-browser &
format = <label-toggle> <menu>
format-foreground = ${color.primary}
label-open = 
label-close = 
